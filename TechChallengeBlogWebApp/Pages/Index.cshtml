@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container px-4 py-5" id="icon-grid">
    <h2 class="pb-2 border-bottom">Notícias</h2>

    <a asp-page="/Criar">Nova Notícia</a>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 py-5">

        @foreach (var item in Model.Noticias)
        {
            <div class="col d-flex align-items-start">
                <svg class="bi text-muted flex-shrink-0 me-3" width="1.75em" height="1.75em"><use xlink:href="#calendar3"></use></svg>
                <div>
                    <h4 class="fw-bold mb-0">@item.Titulo</h4>
                    <p>Autor : @item.Autor </p>
                    <p>Data : @item.DataPublicacao.ToString("dd/MM/yyyy")</p>
                    <p>Conteúdo: @item.Conteudo</p>
                    <a asp-page="/Editar" asp-route-id="@item.Id">Editar</a>
                </div>
            </div>
        }

    </div>
</div>
